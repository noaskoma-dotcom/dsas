name: check speed 

on:
  workflow_dispatch:

jobs:
  secure-rdp:
    runs-on: windows-latest  # أحدث إصدار Windows (حالياً 2022)
    timeout-minutes: 3600

    steps:
      - name: Enable High Performance Mode
        run: |
          Write-Host "تفعيل وضع الأداء العالي..." -ForegroundColor Cyan
          
          # تفعيل High Performance Power Plan
          powercfg /setactive 8c5e7fda-e8bf-4a96-9a85-a6e23a8c635c
          
          # تعطيل توفير الطاقة للمعالج
          powercfg /change standby-timeout-ac 0
          powercfg /change monitor-timeout-ac 0
          powercfg /change disk-timeout-ac 0
          powercfg /change hibernate-timeout-ac 0
          
          # ضبط المعالج على 100% أداء
          powercfg /setacvalueindex 8c5e7fda-e8bf-4a96-9a85-a6e23a8c635c 54533251-82be-4824-96c1-47b60b740d00 893dee8e-2bef-41e0-89c6-b55d0929964c 100
          powercfg /setacvalueindex 8c5e7fda-e8bf-4a96-9a85-a6e23a8c635c 54533251-82be-4824-96c1-47b60b740d00 bc5038f7-23e0-4960-96da-33abaf5935ec 100
          
          # تطبيق التغييرات
          powercfg /setactive 8c5e7fda-e8bf-4a96-9a85-a6e23a8c635c
          
          Write-Host "تم تفعيل وضع الأداء العالي بنجاح!" -ForegroundColor Green

      - name: Optimize CPU Performance
        run: |
          Write-Host "تحسين أداء المعالج..." -ForegroundColor Cyan
          
          # تعطيل Core Parking (جعل كل الأنوية نشطة دائماً)
          Set-ItemProperty -Path "HKLM:\SYSTEM\CurrentControlSet\Control\Power\PowerSettings\54533251-82be-4824-96c1-47b60b740d00\0cc5b647-c1df-4637-891a-dec35c318583" -Name "ValueMax" -Value 0 -Force
          
          # تقليل أولوية العمليات الخلفية لصالح التطبيقات الأمامية
          Set-ItemProperty -Path "HKLM:\SYSTEM\CurrentControlSet\Control\PriorityControl" -Name "Win32PrioritySeparation" -Value 38 -Force
          
          # تعطيل Windows Defender في الوقت الفعلي (لتحسين الأداء)
          Set-MpPreference -DisableRealtimeMonitoring $true -ErrorAction SilentlyContinue
          
          # تعطيل Superfetch/SysMain
          Stop-Service -Name SysMain -Force -ErrorAction SilentlyContinue
          Set-Service -Name SysMain -StartupType Disabled -ErrorAction SilentlyContinue
          
          # تعطيل Windows Update خلال الجلسة
          Stop-Service -Name wuauserv -Force -ErrorAction SilentlyContinue
          Set-Service -Name wuauserv -StartupType Disabled -ErrorAction SilentlyContinue
          
          Write-Host "تم تحسين أداء المعالج!" -ForegroundColor Green

      - name: Configure Core RDP Settings
        run: |
          # تفعيل سطح المكتب البعيد وإعدادات الأمان
          Set-ItemProperty -Path 'HKLM:\System\CurrentControlSet\Control\Terminal Server' -Name "fDenyTSConnections" -Value 0 -Force
          Set-ItemProperty -Path 'HKLM:\System\CurrentControlSet\Control\Terminal Server\WinStations\RDP-Tcp' -Name "UserAuthentication" -Value 0 -Force
          Set-ItemProperty -Path 'HKLM:\System\CurrentControlSet\Control\Terminal Server\WinStations\RDP-Tcp' -Name "SecurityLayer" -Value 0 -Force

          # إعداد جدار الحماية للسماح بالاتصال
          netsh advfirewall firewall delete rule name="RDP-Tailscale" -ErrorAction SilentlyContinue
          netsh advfirewall firewall add rule name="RDP-Tailscale" dir=in action=allow protocol=TCP localport=3389

          # إعادة تشغيل خدمة RDP لتطبيق التغييرات
          Restart-Service -Name TermService -Force

      - name: Optimize for Ultra-Low Bandwidth
        run: |
          # تعطيل الخلفية تماماً
          Set-ItemProperty -Path 'HKCU:\Control Panel\Desktop' -Name Wallpaper -Value "" -Force
          Set-ItemProperty -Path 'HKLM:\SOFTWARE\Microsoft\Windows\CurrentVersion\Policies\System' -Name Wallpaper -Value "" -Force
          
          # تعطيل كل المؤثرات البصرية
          Set-ItemProperty -Path 'HKCU:\Control Panel\Desktop' -Name UserPreferencesMask -Value ([byte[]](0x90,0x12,0x03,0x80)) -Force
          Set-ItemProperty -Path 'HKCU:\Software\Microsoft\Windows\CurrentVersion\Explorer\VisualEffects' -Name VisualFXSetting -Value 2 -Force
          
          # تقليل جودة الألوان لـ 16 بت (توفير 50% من البيانات)
          Set-ItemProperty -Path 'HKLM:\System\CurrentControlSet\Control\Terminal Server\WinStations\RDP-Tcp' -Name "ColorDepth" -Value 2 -Force
          
          # تعطيل Font Smoothing
          Set-ItemProperty -Path 'HKCU:\Control Panel\Desktop' -Name FontSmoothing -Value 0 -Force
          
          # تعطيل Themes
          Stop-Service -Name Themes -Force -ErrorAction SilentlyContinue
          Set-Service -Name Themes -StartupType Disabled -ErrorAction SilentlyContinue
          
          # تعطيل Windows Search لتقليل استهلاك الموارد
          Stop-Service -Name WSearch -Force -ErrorAction SilentlyContinue
          Set-Service -Name WSearch -StartupType Disabled -ErrorAction SilentlyContinue

      - name: Create RDP User with Fixed Password
        run: |
          $password = "Yahia@2yahiA"
          $securePass = ConvertTo-SecureString $password -AsPlainText -Force
          
          # إنشاء المستخدم وتعيينه كمسؤول
          if (-not (Get-LocalUser -Name "RDP" -ErrorAction SilentlyContinue)) {
              New-LocalUser -Name "RDP" -Password $securePass -AccountNeverExpires -PasswordNeverExpires
          } else {
              Set-LocalUser -Name "RDP" -Password $securePass
          }

          Add-LocalGroupMember -Group "Administrators" -Member "RDP" -ErrorAction SilentlyContinue
          Add-LocalGroupMember -Group "Remote Desktop Users" -Member "RDP" -ErrorAction SilentlyContinue

      - name: Install Tailscale
        run: |
          Write-Host "Installing Tailscale using Chocolatey..."
          
          # تثبيت Chocolatey إذا لم يكن مثبتاً
          if (-not (Get-Command choco -ErrorAction SilentlyContinue)) {
              Write-Host "Installing Chocolatey..."
              Set-ExecutionPolicy Bypass -Scope Process -Force
              [System.Net.ServicePointManager]::SecurityProtocol = [System.Net.ServicePointManager]::SecurityProtocol -bor 3072
              Invoke-Expression ((New-Object System.Net.WebClient).DownloadString('https://community.chocolatey.org/install.ps1'))
              
              # تحديث متغيرات البيئة
              $env:Path = [System.Environment]::GetEnvironmentVariable("Path","Machine") + ";" + [System.Environment]::GetEnvironmentVariable("Path","User")
          }
          
          # تثبيت Tailscale عبر Chocolatey
          Write-Host "Installing Tailscale package..."
          choco install tailscale -y --no-progress --limit-output
          
          # تحديث متغيرات البيئة مرة أخرى
          $env:Path = [System.Environment]::GetEnvironmentVariable("Path","Machine") + ";" + [System.Environment]::GetEnvironmentVariable("Path","User")
          
          Write-Host "Tailscale installation completed!"
          Start-Sleep -Seconds 10

      - name: Establish Tailscale Connection
        run: |
          # التحقق من وجود Tailscale
          $tailscalePath = "$env:ProgramFiles\Tailscale\tailscale.exe"
          if (-not (Test-Path $tailscalePath)) {
              Write-Error "Tailscale executable not found at: $tailscalePath"
              exit 1
          }
          
          Write-Host "Starting Tailscale connection..."
          
          # تفعيل الاتصال باستخدام المفتاح السري
          & $tailscalePath up --authkey=${{ secrets.TAILSCALE_AUTH_KEY }} --hostname=gh-runner-$env:GITHUB_RUN_ID --accept-routes
          
          # الانتظار للحصول على IP
          $tsIP = $null
          $retries = 0
          $maxRetries = 20
          
          while (-not $tsIP -and $retries -lt $maxRetries) {
              Start-Sleep -Seconds 3
              $tsIP = & $tailscalePath ip -4 2>$null
              if ($tsIP) {
                  $tsIP = $tsIP.Trim()
              }
              if (-not $tsIP) {
                  Write-Host "Waiting for Tailscale IP... (attempt $($retries + 1)/$maxRetries)"
                  $retries++
              }
          }
          
          if (-not $tsIP) {
              Write-Error "Failed to get Tailscale IP after $maxRetries attempts"
              exit 1
          }
          
          Write-Host "Tailscale IP obtained: $tsIP"
          echo "TAILSCALE_IP=$tsIP" >> $env:GITHUB_ENV

      - name: Display System Info
        run: |
          Write-Host ""
          Write-Host "========================================" -ForegroundColor Cyan
          Write-Host "معلومات النظام" -ForegroundColor Yellow
          Write-Host "========================================" -ForegroundColor Cyan
          
          # معلومات نظام التشغيل
          $os = Get-CimInstance Win32_OperatingSystem
          Write-Host "نظام التشغيل: $($os.Caption)" -ForegroundColor White
          Write-Host "الإصدار: $($os.Version)" -ForegroundColor White
          
          # معلومات المعالج
          $cpu = Get-CimInstance Win32_Processor
          Write-Host "المعالج: $($cpu.Name)" -ForegroundColor White
          Write-Host "عدد الأنوية: $($cpu.NumberOfCores)" -ForegroundColor White
          Write-Host "عدد المعالجات المنطقية: $($cpu.NumberOfLogicalProcessors)" -ForegroundColor White
          
          # معلومات الذاكرة
          $ram = [math]::Round($os.TotalVisibleMemorySize/1MB, 2)
          Write-Host "الذاكرة: $ram GB" -ForegroundColor White
          
          Write-Host "========================================" -ForegroundColor Cyan
      
      - name: Display Connection Info
        run: |
          Write-Host ""
          Write-Host "========================================" -ForegroundColor Green
          Write-Host "   RDP جاهز للاتصال" -ForegroundColor Cyan
          Write-Host "========================================" -ForegroundColor Green
          Write-Host "العنوان: $env:TAILSCALE_IP" -ForegroundColor Yellow
          Write-Host "المستخدم: RDP" -ForegroundColor Yellow
          Write-Host "كلمة المرور: Yahia@2yahiA" -ForegroundColor Yellow
          Write-Host "========================================" -ForegroundColor Green
          Write-Host ""
          Write-Host "تحسينات الأداء المفعلة:" -ForegroundColor Magenta
          Write-Host "✓ وضع الأداء العالي للمعالج" -ForegroundColor White
          Write-Host "✓ جميع أنوية المعالج نشطة" -ForegroundColor White
          Write-Host "✓ تم تعطيل Windows Defender" -ForegroundColor White
          Write-Host "✓ تم تعطيل الخدمات الثقيلة" -ForegroundColor White
          Write-Host "========================================" -ForegroundColor Green
          Write-Host ""
          Write-Host "ملاحظات مهمة للاتصال بنت ضعيف:" -ForegroundColor Magenta
          Write-Host "1. استخدم دقة 1024x768 أو أقل" -ForegroundColor White
          Write-Host "2. فعّل خيار 'Low Speed Connection' في إعدادات RDP" -ForegroundColor White
          Write-Host "3. عطّل: الخلفية، القوائم، الرسوميات" -ForegroundColor White
          Write-Host "4. استخدم 16-bit colors بدلاً من 32-bit" -ForegroundColor White
          Write-Host "========================================" -ForegroundColor Green
          Write-Host ""

      - name: Install MuMu Player 12 (Latest - VT Support)
        run: |
          Write-Host "Installing MuMu Player 12 (أحدث إصدار)..." -ForegroundColor Cyan
          
          # رابط أحدث إصدار من MuMu Player 12
          $mumuUrl = "https://dldir1v6.qq.com/invc/MuMu_Player_12/MuMuPlayer-12.0-overseas-12.0.1.exe"
          $installerPath = "$env:TEMP\mumuplayer12.exe"
          
          try {
              Write-Host "Downloading MuMu Player 12..."
              Invoke-WebRequest -Uri $mumuUrl -OutFile $installerPath -UseBasicParsing -TimeoutSec 600
              
              Write-Host "Installing MuMu Player 12 (قد يستغرق 3-5 دقائق)..."
              # تثبيت صامت
              Start-Process -FilePath $installerPath -ArgumentList "/S" -Wait -NoNewWindow
              
              Write-Host "Waiting for installation to complete..."
              Start-Sleep -Seconds 45
              
              # البحث عن مسار التثبيت
              $possiblePaths = @(
                  "C:\Program Files\MuMuPlayer-12.0",
                  "C:\Program Files (x86)\MuMuPlayer-12.0",
                  "$env:ProgramFiles\MuMuPlayer-12.0",
                  "${env:ProgramFiles(x86)}\MuMuPlayer-12.0",
                  "C:\Program Files\Netease\MuMuPlayer-12.0"
              )
              
              $mumuInstalled = $false
              foreach ($path in $possiblePaths) {
                  if (Test-Path $path) {
                      Write-Host "MuMu Player 12 installed at: $path" -ForegroundColor Green
                      $mumuInstalled = $true
                      
                      # تشغيل MuMu Player
                      $mumuExe = Get-ChildItem -Path $path -Filter "MuMuPlayer.exe" -Recurse -ErrorAction SilentlyContinue | Select-Object -First 1
                      if ($mumuExe) {
                          Write-Host "Starting MuMu Player 12..."
                          Start-Process -FilePath $mumuExe.FullName -ErrorAction SilentlyContinue
                          Start-Sleep -Seconds 30
                          Write-Host "MuMu Player 12 is now running!" -ForegroundColor Green
                      }
                      break
                  }
              }
              
              if (-not $mumuInstalled) {
                  Write-Warning "Could not verify MuMu installation automatically"
                  Write-Host "يمكنك تثبيته يدوياً بعد الاتصال عبر RDP" -ForegroundColor Yellow
              }
              
              # حذف ملف التثبيت
              Remove-Item $installerPath -Force -ErrorAction SilentlyContinue
              
          } catch {
              Write-Warning "MuMu installation encountered an issue: $_"
              Write-Host "يمكنك تثبيته يدوياً بعد الاتصال عبر RDP" -ForegroundColor Yellow
          }

      - name: Maintain Connection
        run: |
          # إبقاء السيرفر يعمل مع عرض الحالة كل 5 دقائق
          $counter = 0
          while ($true) {
              $counter++
              $uptimeMinutes = ((Get-Date) - (Get-CimInstance Win32_OperatingSystem).LastBootUpTime).TotalMinutes
              $uptime = [math]::Round($uptimeMinutes, 1)
              
              # عرض استهلاك المعالج
              $cpuUsage = (Get-CimInstance Win32_Processor).LoadPercentage
              
              Write-Host "[$counter] [$(Get-Date -Format 'HH:mm:ss')] الاتصال نشط - Uptime: $uptime دقيقة - CPU: $cpuUsage%" -ForegroundColor Green
              Start-Sleep -Seconds 300
          }
